generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id                String              @id @default(uuid())
  name              String
  address           String
  description       String
  imageUrl          String?             // Alterado para opcional
  phones            String[]
  
  // Novos campos de hor√°rio (4 lacunas)
  openingTime       String?
  lunchStart        String?
  lunchEnd          String?
  closingTime       String?

  managerId         String?             @unique
  user              user?               @relation(fields: [managerId], references: [id])
  BarbershopService BarbershopService[]
  Booking           Booking[]
}

model BarbershopService {
  id           String    @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  priceInCents Int
  barbershopId String
  deletedAt    DateTime?
  Barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  Booking      Booking[]
}

model Booking {
  id                String            @id @default(uuid())
  stripeChargeId    String?
  barbershopId      String
  serviceId         String
  userId            String
  date              DateTime          @db.Timestamptz(6)
  cancelledAt       DateTime?         @db.Timestamptz(6)
  createdAt         DateTime          @default(now()) @db.Timestamptz(6)
  updatedAt         DateTime          @updatedAt @db.Timestamptz(6)
  Barbershop        Barbershop        @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
  BarbershopService BarbershopService @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user              user              @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model account {
  id         String   @id @default(uuid())
  accountId  String
  providerId String
  userId     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model user {
  id            String      @id @default(uuid())
  name          String
  email         String      @unique
  emailVerified Boolean     @default(false)
  image         String?
  password      String?
  phone         String?
  role          UserRole    @default(BARBER)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  Barbershop    Barbershop?
  Booking       Booking[]
  account       account[]
  session       session[]
}

model verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
}

enum UserRole {
  CLIENT
  BARBER
  ADMIN
}